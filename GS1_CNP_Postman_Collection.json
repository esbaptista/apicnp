      "item": [
        {
          "name": "Token - JSON body (HML)",
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "value": "{{client_id}}",
                  "type": "string"
                },
                {
                  "key": "password",
                  "value": "{{client_secret}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"grant_type\":\"password\",\"username\":\"{{username}}\",\"password\":\"{{password}}\"}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "https://{{hml_host}}/oauth/access-token",
              "protocol": "https",
              "host": [
                "{{hml_host}}"
              ],
              "path": [
                "oauth",
                "access-token"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save tokens to collection variables",
                  "let ok = false;",
                  "try {",
                  "  let data = pm.response.json();",
                  "  if (data && data.access_token) {",
                  "    pm.collectionVariables.set('access_token', data.access_token);",
                  "    if (data.refresh_token) pm.collectionVariables.set('refresh_token', data.refresh_token);",
                  "    if (data.expires_in) pm.collectionVariables.set('token_expires_in', data.expires_in);",
                  "    ok = true;",
                  "  }",
                  "} catch(e) {}",
                  "pm.test('access_token stored', function(){ pm.expect(ok).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
